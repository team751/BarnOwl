<center>
  <img style="width: 150px;" src="/assets/logo.png" />
</center>
<h1 style="text-align: center;">BarnOwl Part Management System</h1><br>
<%= form_tag "/screws/results", method: "POST" %>
  <h4>Choose a screw size</h4>
  <% Screw.all.map(&:size).uniq.each do |size| %>
    <label><%= check_box_tag "search[sizes][]", size, false %> <%= size %>"</input></label>
  <% end %>
  <h4>Choose a screw length</h4>
  <% Screw.all.map(&:length).uniq.each do |length| %>
    <label><%= check_box_tag "search[lengths][]", length, false %> <%= length %>"</input></label>
  <% end %>
  <button class="btn">Search</button>
</form>

<script>
$.idleTimer(120000);

$(document).bind("idle.idleTimer", function(){
  document.location = "/"
});


$(document).bind("active.idleTimer", function(){
 // function you want to fire when the user becomes active again
});

enableBarcodeReading();
</script>