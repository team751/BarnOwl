<table border="1">
  <tr>
    <% 10.times.each do |column| %>
      <td><%= column+1 %></td>
    <% end %>
  </tr>
  <% 6.times.each do |row| %>
    <tr>
      <% 10.times.each do |column| %>
        <td <%= raw('style="background-color: #FF4136;"') if screw.locations.include?([row+1, column+1]) %>><a href="/drawers/<%= Drawer.where(:row => row+1, :column => column+1).first.id %>"><%= Drawer.where(:row => row+1, :column => column+1).first.label %></a></td>
      <% end %>
    </tr>
  <% end %>
</table>