<%= form_for @drawer do |f| %>
<% if @drawer.errors.any? %>
<div class="alert alert-danger">
  <ul>
    <% @drawer.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
  Label: <%= f.text_field :label, :placeholder => "Drawer Label" %><br>
  Row: <%= f.number_field :row, :placeholder => "Drawer Row" %><br>
  Column: <%= f.number_field :column, :placeholder => "Drawer Column" %><br>
  
  <%= f.submit :class => "btn" %>
<% end %>