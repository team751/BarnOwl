<h1><%= @drawer.label %></h1>
<% if current_user_if_exists.has_role?(:admin) || current_user_if_exists.has_role?(:moderator) %>
  <%= link_to "Edit", edit_drawer_path(@drawer) %><br>
  <%= link_to "Delete", @drawer, :method => :delete, :class => :destroy %>
<% end %>
<h3>Items</h3>
<% if @drawer.items.count == 0 %>
  <p>No items entered</p>
<% end %>
<ul>
  <% @drawer.items.each do |item| %>
    <a href="/items/<%= item.id %>"><%= item.name %></a><br>
  <% end %>
</ul>
  
<script>
$.idleTimer(60000);

$(document).bind("idle.idleTimer", function(){
  document.location = "/"
});


$(document).bind("active.idleTimer", function(){
 // function you want to fire when the user becomes active again
});
</script>