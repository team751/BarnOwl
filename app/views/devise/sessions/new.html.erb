<center>
  <img style="width: 150px;" src="/assets/logo.png" /><br><br><br>
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
    <%= f.input :email, :autofocus => true %>
    <%= f.input :password %>
    <%= f.input :remember_me, :as => :boolean, :wrapper => :inline_checkbox if devise_mapping.rememberable? %>
    <%= f.button :submit, "Sign in", :class => 'btn-primary' %>
  <% end %>
  <%= render "devise/shared/links" %>
</center>
<script>
$.idleTimer(30000);

$(document).bind("idle.idleTimer", function(){
  document.location = "/"
});


$(document).bind("active.idleTimer", function(){
 // function you want to fire when the user becomes active again
});
</script>