<div>
  <h3>Team 751 2014 Robot - <%= @assembly.name %></h3>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Part Number</th>
        <th>Name</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @assembly.parts.each do |part| %>
        <tr>
          <td><%= part.part_number %></td>
          <td><%= part.name %></td>
          <td><%= raw(part.state_html) %></td>
          <td style="width: 125px;">
            <a href="<%= "/parts/#{:id}/parts/#{part.id}/edit" %>" class="btn btn-primary">Edit</a>
            <button type="button" class="btn btn-danger">Delete</button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>